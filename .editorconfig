# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js}]
charset = utf-8
indent_size = 4

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 4

# Matches the exact files either package.json *.yml
[{package.json,*.yml, bower.json}]
indent_style = space
indent_size = 2
